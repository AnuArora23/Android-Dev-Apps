<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title1"
        android:text="Login"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#092884"
        android:drawableRight="@drawable/baseline_person_24"
        android:textStyle="bold"
        android:layout_margin="25dp"
        />
    <EditText
        android:id="@+id/username1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="15dp"
        android:layout_below="@id/title1"
        android:hint="User Name"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


    />
    <EditText
        android:id="@+id/pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="15dp"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login1"
        android:text="Existing user, click here to login"
        android:textColor="@color/white"
        android:layout_below="@id/pass1"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup1"
        android:text="New User, Click here to Register"
        android:textColor="@color/white"
        android:layout_below="@id/login1"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"


        />


</RelativeLayout>