<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="Sign Up"
        android:textSize="35dp"
        android:gravity="center"
        android:textColor="#092884"
        android:drawableRight="@drawable/baseline_person_24"
        android:textStyle="bold"
        android:layout_margin="25dp"
        />
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="15dp"
        android:layout_below="@id/title"
        android:hint="User Name"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Enter your Email ID"
        android:layout_below="@id/username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:background="#A885E8"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="15dp"


    />
    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="15dp"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/c_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_password_24"
        android:drawablePadding="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:id="@+id/signup"
    android:text="New User, Click here to Register"
    android:textColor="@color/white"
    android:layout_below="@id/c_pass"
    android:layout_margin="10dp"
    android:layout_centerInParent="true"


    />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:text="Existing user, click here to login"
            android:textColor="@color/white"
            android:layout_below="@id/signup"
            android:layout_centerInParent="true"


            />



</RelativeLayout>