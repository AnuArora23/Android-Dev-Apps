<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title"
    android:text="Sign Up"
    android:textSize="35dp"
    android:gravity="center"
    android:textColor="#092884"
    android:drawableRight="@drawable/baseline_person_24"
    android:textStyle="bold"
    android:layout_margin="25dp"
/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="15dp"
        android:hint="User Name"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:hint="Enter your Email ID"
        android:layout_below="@id/username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:background="#A885E8"
        android:padding="10dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="15dp"
        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="15dp"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/c_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="15dp"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@id/c_pass"



        >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/signupBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_person_add_alt_1_24"
        android:text="SIGN UP"
        android:textSize="25dp"
        android:textAlignment="textEnd"


        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/c_pass"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="#A885E8"
        android:drawableLeft="@drawable/baseline_login_24"
        android:text="LOGIN"

        android:textSize="25dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_above="@+id/smicons"
        android:gravity="center"
android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You can Sign up using "
            android:textSize="25dp"
            android:textAlignment="center"
            android:textColor="#2E155B"

            ></TextView>

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/smicons"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:orientation="horizontal"
    >
<ImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/fb"
    android:layout_margin="10dp"

    />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/instagram"
            android:layout_margin="10dp"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/whasapp"
            android:layout_margin="10dp"

            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/google"
            android:layout_margin="10dp"

            />

    </LinearLayout>

</RelativeLayout>